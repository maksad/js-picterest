style(type='text/css').
  .remove-shadow{
    box-shadow: none !important;
  }
  .grid-item {
    width: 200px;
    padding-right: 20px;
  }

  .grid-item--width2 {
    width: 400px;
    padding-right: 20px;
  }


.grid(data-masonry='{ "itemSelector": ".grid-item", "columnWidth": 200 }')
  each image in JSON.parse(images)
    .grid-item
      .card
        .card-image
          img.materialboxed(src=image.link)
        if image.description
          .card-content
            p= image.description
        .card-action
          a.red-text(href='delete/' + image._id) Delete

script.
  $(document).ready(function(){
      $('.materialboxed').materialbox();
  });
